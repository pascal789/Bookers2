<html>
  <head></head>
  <body>
    <main>
      <% if flash[:notice] %>
        <p class="alert alert-success"><%= notice %></p>
      <% end %>
      <div class="container">
        <div class="row">
          <div class="col-md-3">
            <%= render 'books/list', book: @book, user: @user %>
          </div>
          <div class="col-md-8 offset-md-1">
  		      <h2>Books</h2>
  		      <table class="table">
  		        <thead>
  		          <tr>
                  <th>Title</th>
                  <th>Opinion</th>
                  <th colspan="3"></th>
                </tr>
  		        </thead>
  		        <tbody>
  		          <% @book.each do |book| %>
  		            <tr>
    		            <td>
    		              <%= link_to user_path(book.user) do %>
    		                <%= image_tag @user.get_image, size:"40x40" %>
    		              <% end %>
    		            </td>
    		            <td><%= link_to book.title, book_path(book.id) %></td>
    		            <td><%= book.body %></td>
    		          </tr>
  		          <% end %>
  		          </tr>
  		        </tbody>
  		      </table>
  		    </div>
        </div>
      </div>
    </main>
  </body>
</html>